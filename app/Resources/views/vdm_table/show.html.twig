{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vdm_table</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vdm_table.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ vdm_table.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ vdm_table.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if vdm_table.date %}{{ vdm_table.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ vdm_table.author }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vdm_table_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vdm_table_edit', { 'id': vdm_table.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
